<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    x:Class="MauiDemo.StackLayoutDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"         
    Title="StackLayoutDemo">

    <VerticalStackLayout HorizontalOptions="Start" Margin="20">
        <HorizontalStackLayout VerticalOptions="Start">
            <Label Text="Name"></Label>
            <Entry HeightRequest="30" WidthRequest="150"></Entry>
            <Label Text="Insert the name" TextColor="Red"></Label>
        </HorizontalStackLayout>
        <HorizontalStackLayout VerticalOptions="Start">
            <Label Text="Age"></Label>
            <Entry HeightRequest="30" WidthRequest="150"></Entry>
            <Label Text="Insert the age" TextColor="Red"></Label>
        </HorizontalStackLayout>
    </VerticalStackLayout>
    
</ContentPage>