<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MauiDemo.AbsoluteLayoutDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
    Title="AbsoluteLayoutDemo">

    <AbsoluteLayout>
        <BoxView AbsoluteLayout.LayoutBounds="0.1,0.1,0.3,0.3"
                 AbsoluteLayout.LayoutFlags="All"
                 Color="Red" />

        <BoxView AbsoluteLayout.LayoutBounds="0.5,0.5,150,150"
                 AbsoluteLayout.LayoutFlags="PositionProportional"
                 Color="Green" />

        <BoxView AbsoluteLayout.LayoutBounds="200,100,0.5,100"
                 AbsoluteLayout.LayoutFlags="WidthProportional"
                 Color="Blue" />
    </AbsoluteLayout>
    
</ContentPage>