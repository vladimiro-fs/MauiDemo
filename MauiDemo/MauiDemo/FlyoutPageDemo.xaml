<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage 
    x:Class="MauiDemo.FlyoutPageDemo"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    FlyoutLayoutBehavior="Popover"
    Title="FlyoutPageDemo">

    <FlyoutPage.Flyout>
        <ContentPage Title="Flyout sub-menu" BackgroundColor="Aqua">
            <Label 
                Text="Sub-menu"
                FontSize="Large"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </ContentPage>
    </FlyoutPage.Flyout>
    <FlyoutPage.Detail>
        <ContentPage Title="Flyout sub-menu" BackgroundColor="Yellow">
            <Label 
                Text="Details"
                FontSize="Large"
                HorizontalOptions="Center"
                VerticalOptions="Center" />
        </ContentPage>
    </FlyoutPage.Detail>

</FlyoutPage>